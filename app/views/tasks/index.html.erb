<h1><%= t('view.index') %></h1>
<p><%= notice %></p>
<table>
  <tr>
    <th><%= t('view.name') %></th>
    <th><%= t('view.limit') %></th>
    <th><%= t('view.priority') %></th>
    <th><%= t('view.progress') %></th>
    # <th><%#= t('view.tag') %></th>
  <tr/>
  # 進捗で絞り込み find_by(progress: )
  # ソート order
  # 検索 name, content
  # 検索 tag.name
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      # <td><%#= task.limit %></td>
      # <td><%#= task.priority %></td>
      # <td><%#= task.progress %></td>
      # <td><%#= task.tags.name %></td>
      <td><%= link_to t('view.show'), task_path(task.id) %></td> |
      <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td> |
      <td><%= link_to t('view.destroy'), task_path(task.id),
                method: :delete,data: { confirm: "i18n削除？" } %>
      </td>
    </tr>
  <% end %>
  <h6>※<%= t('view.progress') %>【&nbsp;未着手：A&nbsp;着手：B&nbsp;完了：C&nbsp;】</h6>
</table>
