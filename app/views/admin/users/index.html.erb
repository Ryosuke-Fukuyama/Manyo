<h1>Profile index</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th>管理者権限</th>
    <th>ユーザーネーム</th>
    <th>タスク数</th>
  <tr/>
  <% @users.eager_load(:tasks).each do |user| %>
    <tr>
      <td><%= user.admin %></td>
      <td><%= user.name %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to t('view.show'), admin_user_path(user.id) %></td> |
      <td><%= link_to t('view.edit'), edit_admin_user_path(user.id) %></td> |
      <td><%= link_to t('view.destroy'), admin_user_path(user.id),
                method: :delete,data: { confirm: t('confirm.delete') } %>
      </td>
    </tr>
  <% end %>
</table>
<hr>
<%= paginate @users %>