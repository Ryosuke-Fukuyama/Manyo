<%= form_with(model: @task, local: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>
        <%= t('activerecord.errors.announce') %>
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_title">
    <%= f.label :title, t('view.title') %>
    <%= f.text_field :title %>
  </div>
  <div class="task_title">
    <%= f.label :content, t('view.content') %>
    <%= f.text_field :content %>
  </div>
  <div class="task_title">
    <%= f.label :limit, t('view.limit') %>
    <%= f.date_field :limit %>
  </div>
  <% if controller.action_name == "edit" || "update" %>
    <div class="task_title">
    <%= f.label :progress, t('view.progress') %>
    <%= f.select :progress, [["未着手", "未着手"], ["着手中", "着手中"],
                          ["完了", "完了"]], include_blank: "選択して下さい" %>
    </div>
    <div class="task_title">
      <%= f.label :priority, t('view.priority') %>
      <%= f.number_field :priority %>
  <% end %>
  </div><%= f.submit %>
  <%= link_to t('view.index'), tasks_path %>
<% end %>