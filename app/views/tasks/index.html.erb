<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク</th>
    <th>期限</th>
    <th>優先順位</th>
    <th>ステータス</th>
    # <th>タグ</th>
  <tr/>
  # 進捗で絞り込み find_by(progress: )
  # ソート order
  # 検索 name, content
  # 検索 tag.name
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%#= task.limit %></td>
      <td><%#= task.priority %></td>
      <td><%#= task.progress %></td>
      <td><%= link_to '詳細', task_path(task.id) %></td> |
      <td><%= link_to '編集', edit_task_path(task.id) %></td> |
      <td><%= link_to '削除', task_path(task.id),
                method: :delete,data: { confirm: '削除しますか？' } %>
      </td>
    </tr>
  <% end %>
  <h6>※ステータス【&nbsp;未着手：A&nbsp;着手：B&nbsp;完了：C&nbsp;】</h6>
</table>
<br>
<%= link_to '新規投稿', new_task_path %>