<h1>Profile index</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th>ユーザーネイム</th>
    <th>タスク数</th>
  <tr/>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to t('view.show'), user_path(user.id) %></td> |
      <td><%= link_to t('view.edit'), edit_user_path(user.id) %></td> |
      <td><%= link_to t('view.destroy'), user_path(user.id),
                method: :delete,data: { confirm: t('confirm.delete') } %>
      </td> # ユーザを削除したら、そのユーザに紐づいているタスクを全て削除する
    </tr>
  <% end %>
</table>
<hr>
<%= paginate @users %>